<h1>New Post</h1>

<%= form_with(url: posts_path, model: @post, local: true) do |form| %>

  <div class="field mb-3">
    <%= form.text_field :title,id: :Post_title, class:"form-control", placeholder:"Title" %>
  </div>

  <div class="field mb-3">
    <%= form.text_area :content,id: :Post_content,  class:"form-control" , placeholder:"Content"%>
  </div>

  <div class="field mb-3">

    <%= form.number_field :user_id, id: :Post_user_id, 
    class:"form-control", value: current_user.id, type: :hidden%>

  </div>
  


  <div class="actions mb-3">
    <%= form.submit class:"btn btn-success"%>
  </div>
<% end %>

