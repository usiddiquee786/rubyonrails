<%= form_with(model: friend, local: true) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
      <% friend.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.text_field :first_name, id: :friend_first_name, class:"form-control", placeholder:"First Name" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :last_name, id: :friend_last_name ,  class:"form-control" , placeholder:"Last Name"%>
  </div>

  <div class="field mb-3">
    <%= form.text_field :email, id: :friend_email,  class:"form-control" , placeholder:"Email" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :phone, id: :friend_phone,  class:"form-control" , placeholder:"Phone" %>
  </div>

  <div class="field mb-3">

    <%= form.number_field :user_id, id: :friend_user_id,  
    class:"form-control", value: current_user.id, type: :hidden%>

  </div>
  


  <div class="actions mb-3">
    <%= form.submit class:"btn btn-success"%>
  </div>
<% end %>
